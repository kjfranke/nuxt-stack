{
  "name": "@kjfranke/nuxt-stack",
  "version": "0.1.0",
  "description": "A production-ready Nuxt 4 stack with performance optimizations, modern tooling, and best practices built-in. Extend via Nuxt layers.",
  "author": "Keesjan Franke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjfranke/nuxt-stack.git"
  },
  "homepage": "https://github.com/kjfranke/nuxt-stack#readme",
  "bugs": {
    "url": "https://github.com/kjfranke/nuxt-stack/issues"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=22.0.0"
  },
  "type": "module",
  "exports": {
    ".": "./base/nuxt.config.ts"
  },
  "files": [
    "base"
  ],
  "keywords": [
    "nuxt",
    "nuxt-layer",
    "nuxt4",
    "foundation",
    "boilerplate",
    "starter",
    "performance",
    "netlify"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint base --fix --no-warn-ignored",
    "*.{css,vue}": "stylelint base/**/*.{vue,css} --fix"
  },
  "scripts": {
    "build": "nuxt build ./base",
    "dev": "netlify dev",
    "dev:nuxt": "nuxt dev ./base",
    "generate": "nuxt generate ./base",
    "preview": "nuxt preview ./base",
    "postinstall": "npm run browserslist && nuxt prepare",
    "version": "changeset version",
    "changeset": "changeset",
    "lint": "npx lint-staged",
    "lint:all": "npm run lint:style && npm run lint:js",
    "lint:js": "eslint base --fix --no-warn-ignored",
    "lint:style": "stylelint base/**/*.{vue,css} --fix --ignore-path .gitignore --ignore-path .stylelintignore",
    "browserslist": "npx browserslist > ./browserslist.txt"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.10.0",
    "@nuxt/fonts": "^0.12.0",
    "@nuxt/icon": "^1.11.0",
    "@nuxt/image": "^2.0.0",
    "nuxt": "^4.2.1",
    "nuxt-vitalizer": "^2.0.0",
    "postcss-custom-media-generator": "^1.1.0",
    "postcss-preset-env": "^10.4.0",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@nuxt/hints": "^1.0.0-alpha.1",
    "eslint": "^9.38.0",
    "eslint-plugin-compat": "^6.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "netlify-cli": "^17.37.4",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.5"
  },
  "optionalDependencies": {
    "@oxc-minify/binding-linux-x64-gnu": "0.94.0",
    "@oxc-parser/binding-linux-x64-gnu": "0.94.0",
    "@oxc-transform/binding-linux-x64-gnu": "0.94.0",
    "@rollup/rollup-linux-x64-gnu": "4.53.1"
  }
}
